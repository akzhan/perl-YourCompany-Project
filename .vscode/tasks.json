{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "prove",
            "command": "prove",
            "isTestCommand": true,
            "isShellCommand": true,
            "args": ["-r", "t"],
            "showOutput": "always",
            "problemMatcher": {
                "owner": "perl",
                "fileLocation": "relative",
                "pattern": [
                    {
                        "regexp": "^#\\s+Failed test '(.+)'",
                        "message": 1
                    },
                    {
                        "regexp": "^#\\s+at (\\S+) line (\\d+).",
                        "file": 1,
                        "line": 2
                    }
                ]
            }
        }
    ]
}
